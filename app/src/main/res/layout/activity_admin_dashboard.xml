<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminDashboard">

    <!-- Admin Panel Title -->
    <TextView
        android:id="@+id/textViewAdminPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Admin Panel"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Box for Buttons with 3D Effect and Shadow -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add Item Button -->
            <Button
                android:id="@+id/btnAddItem"
                style="@style/AdminButtonStyle"
                android:text="Add Item" />

            <!-- Remove Item Button -->
            <Button
                android:id="@+id/btnRemoveItem"
                style="@style/AdminButtonStyle"
                android:text="Remove Item" />

            <!-- Add Category Button -->
            <Button
                android:id="@+id/btnAddCategory"
                style="@style/AdminButtonStyle"
                android:text="Add Category" />

            <!-- Remove Category Button -->
            <Button
                android:id="@+id/btnRemoveCategory"
                style="@style/AdminButtonStyle"
                android:text="Remove Category" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
